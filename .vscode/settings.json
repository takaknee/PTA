{
    // G-suits や M365 スクリプト開発用の推奨設定をここに記述します
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true
    },
    "editor.formatOnSave": true,
    // Copilot エディタ関連の設定
    "github.copilot.enable": {
        "javascript": true,
        "typescript": true,
        "python": true,
        "powershell": true,
        "shellscript": true
    },
    "github.copilot.editor.enableCodeActions": true,
    "github.copilot.renameSuggestions.triggerAutomatically": true,
    // インライン提案のタイミング制御設定
    "github.copilot.editor.iterativeFixing": true,
    "github.copilot.editor.enableCopilotImplicitInvocations": true,
    // 自動受け入れとタイミング設定
    "editor.inlineSuggest.enabled": true,
    "editor.inlineSuggest.showToolbar": "onHover",
    "editor.inlineSuggest.suppressSuggestions": false,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "editor.quickSuggestionsDelay": 100,
    "editor.suggestOnTriggerCharacters": true,
    "editor.wordBasedSuggestions": "matchingDocuments",
    "github.copilot.advanced": {
        "inlineSuggestCount": 3,
        "debounceMs": 75,
        "listCount": 10
    },
    "github.copilot.chat.agent.autoFix": true,
    "github.copilot.chat.agent.runTasks": true,
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "file": ".github/instructions/copilot-commit-message.instructions.md"
        },
        {
            "text": "Conventional Commit形式を使用してください。"
        }
    ],
    "github.copilot.chat.edits.newNotebook.enabled": true,
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.suggestRelatedFilesForTests": true,
    "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.generateTests.codeLens": true,
    "github.copilot.chat.localeOverride": "ja",
    "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
        {
            "file": ".github/instructions/pull-request-description.instructions.md"
        },
        {
            "text": "応答は日本語で"
        }
    ],
    "github.copilot.chat.reviewSelection.enabled": true,
    "github.copilot.chat.reviewSelection.instructions": [
        {
            "file": ".github/instructions/copilot-review-instructions.md"
        },
        {
            "text": "すべてのTODOタスクを解決してください。"
        }
    ],
    "github.copilot.chat.scopeSelection": true,
    "github.copilot.chat.setupTests.enabled": true,
    "github.copilot.chat.summarizeAgentConversationHistory.enabled": true,
    "github.copilot.chat.terminalChatLocation": "chatView",
    "github.copilot.chat.testGeneration.instructions": [
        {
            "file": ".github/instructions/test-instructions.md"
        },
        {
            "text": "関連するテストは常にスイートにまとめてください。"
        }
    ],
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.nextEditSuggestions.fixes": true,
    // 時間ベースの自動受け入れ設定
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.tabCompletion": "on",
    "editor.suggest.showStatusBar": true,
    "editor.suggest.preview": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    // 自動保存とCopilot連携
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "text": "応答は日本語で行うこと"
        },
        {
            "file": ".github/instructions/general-coding.instructions.md"
        }
    ],
}