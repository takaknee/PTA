&lt;?xml version="1.0" encoding="utf-8"?&gt;
&lt;configuration&gt;
  &lt;startup&gt;
    &lt;supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" /&gt;
  &lt;/startup&gt;

  &lt;appSettings&gt;
    &lt;!-- OpenAI API 設定 --&gt;
    &lt;add key="OpenAIApiKey" value="YOUR_API_KEY_HERE" /&gt;
    &lt;add key="OpenAIEndpoint" value="https://your-azure-openai-endpoint.openai.azure.com/openai/deployments/gpt-4/chat/completions?api-version=2024-02-15-preview" /&gt;
    &lt;add key="OpenAIModel" value="gpt-4" /&gt;
    
    &lt;!-- アプリケーション設定 --&gt;
    &lt;add key="AppName" value="Outlook AI Helper" /&gt;
    &lt;add key="AppVersion" value="1.0.0 VSTO" /&gt;
    &lt;add key="MaxContentLength" value="50000" /&gt;
    &lt;add key="RequestTimeout" value="30" /&gt;
    &lt;add key="MaxTokens" value="2000" /&gt;
    
    &lt;!-- ログ設定 --&gt;
    &lt;add key="LogLevel" value="Information" /&gt;
    &lt;add key="LogToFile" value="true" /&gt;
    &lt;add key="LogFileName" value="PTA_Outlook_Addin.log" /&gt;
    
    &lt;!-- 機能設定 --&gt;
    &lt;add key="EnableAutoUpdate" value="true" /&gt;
    &lt;add key="CheckUpdateInterval" value="7" /&gt;
    &lt;add key="EnableTelemetry" value="false" /&gt;
  &lt;/appSettings&gt;

  &lt;system.net&gt;
    &lt;defaultProxy useDefaultCredentials="true" enabled="true" /&gt;
    &lt;settings&gt;
      &lt;httpWebRequest useUnsafeHeaderParsing="false" /&gt;
    &lt;/settings&gt;
  &lt;/system.net&gt;

  &lt;runtime&gt;
    &lt;assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1"&gt;
      &lt;dependentAssembly&gt;
        &lt;assemblyIdentity name="Microsoft.Office.Interop.Outlook" publicKeyToken="71e9bce111e9429c" culture="neutral" /&gt;
        &lt;bindingRedirect oldVersion="0.0.0.0-15.0.0.0" newVersion="15.0.0.0" /&gt;
      &lt;/dependentAssembly&gt;
      &lt;dependentAssembly&gt;
        &lt;assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" /&gt;
        &lt;bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" /&gt;
      &lt;/dependentAssembly&gt;
    &lt;/assemblyBinding&gt;
  &lt;/runtime&gt;

&lt;/configuration&gt;