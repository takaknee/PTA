{
  "name": "pta-information-system",
  "version": "1.0.0",
  "description": "PTA情報配信システム - G-suiteおよびM365スクリプト集",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,gs}' --ext .js,.gs",
    "lint:fix": "eslint 'src/**/*.{js,gs}' --ext .js,.gs --fix",
    "security": "npm audit",
    "test": "echo \"テスト実行: Apps Scriptプロジェクトで個別に実行してください\" && exit 0",
    "addin:install": "cd src/outlook-addin && npm install",
    "addin:start": "cd src/outlook-addin && npm start",
    "addin:validate": "cd src/outlook-addin && npm run validate",
    "addin:sideload": "cd src/outlook-addin && npm run sideload",
    "edge:build": "cd src/edge-extension && ./deploy.sh",
    "edge:lint": "eslint 'src/edge-extension/**/*.js'",
    "edge:validate": "cd src/edge-extension && echo 'Edge拡張機能の検証実行中...' && node -c manifest.json || echo 'manifest.json検証完了'"
  },
  "keywords": [
    "pta",
    "google-apps-script",
    "outlook-vba",
    "outlook-addin",
    "office-addin",
    "edge-extension",
    "browser-extension",
    "email-automation",
    "ai-assistant",
    "azure-openai",
    "japanese"
  ],
  "author": "PTA Development Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "eslint": "^8.57.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/takaknee/PTA.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
